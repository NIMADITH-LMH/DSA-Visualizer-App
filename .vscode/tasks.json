{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start DSA Visualizer Dev Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": {
				"owner": "vite",
				"pattern": {
					"regexp": "",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "ready in"
				}
			}
		},
		{
			"label": "Start DSA Visualizer Full Stack",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev:full"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": {
				"owner": "vite",
				"pattern": {
					"regexp": "",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "ready in"
				}
			}
		},
		{
			"label": "Hot Reload DSA Visualizer",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev:hot"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "vite",
				"pattern": {
					"regexp": "",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "ready in"
				}
			}
		}
	]
}